<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="104dp"
    android:padding="10dp" >
    <ImageView
        android:src="@drawable/ic_notifications_black_24dp"
        android:id="@+id/text_notification_image"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp" />
    <TextView
        android:textSize="13dp"
        android:textColor="#000"
        android:id="@+id/text_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_notification_image"
        />
    <TextView
        android:textSize="13dp"
        android:textColor="#000"
        android:id="@+id/text_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_notification_image"
        android:layout_below="@id/text_notification_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_notification_text"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/common_text_notification_cancel"
            android:id="@+id/text_notification_action_button"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/common_notification_close_button"
            android:background="@color/common_yellow700"
            android:textColor="@color/common_black"
            android:layout_margin="5dp"
            />

    </LinearLayout>

</RelativeLayout>