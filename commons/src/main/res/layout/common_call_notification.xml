<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="104dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/call_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/common_ic_call_black_24dp" />

    <TextView
        android:id="@+id/call_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/call_image"
        android:textColor="#000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/call_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_title"
        android:layout_toRightOf="@id/call_image"
        android:textColor="#000"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_text"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call_action_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/common_yellow700"
            android:drawableLeft="@drawable/common_ic_call_black_24dp"
            android:drawablePadding="5dp"
            android:text="@string/common_call_notification_call"
            android:textColor="@color/common_black" />

        <Button
            android:id="@+id/call_cancel_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_border"
            android:drawableLeft="@drawable/places_ic_clear"
            android:drawablePadding="5dp"
            android:text="@string/common_call_notification_cancel"
            android:textColor="@color/common_blue900" />
    </LinearLayout>

</RelativeLayout>
